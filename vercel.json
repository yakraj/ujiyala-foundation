{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "server/api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/api/$1" },
    { "src": "/(.*\\.(?:ico|js|css|png|jpg|jpeg|svg|webp|ttf|woff2?))$", "dest": "/client/$1" },
    { "src": "/(.*)", "dest": "/client/index.html" }
  ]
}

