{
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "server/src/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/:match*", "destination": "/server/src/server.js" },
    { "source": "/:match*", "destination": "/client/dist/:match*" }
  ]
}