{
  "version": 2,
  "builds": [
    { "src": "server/src/server.js", "use": "@vercel/node" },
    { "src": "client/package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/src/server.js" },
    { "src": "/(.*)", "dest": "client/dist/$1" }
  ]
}
